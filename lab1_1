#include <iostream>
#include <vector>
#include <chrono>
#include <cstdlib>
#include <windows.h>

using namespace std;

int main() {
    SetConsoleOutputCP(1251);
    int n;
    cout << "Введіть розмір матриці n: ";
    cin >> n;

    vector<vector<int>> matrix(n, vector<int>(n));
    vector<vector<int>> transposed(n, vector<int>(n));


    for (int i = 0; i < n; ++i)
    {
        for (int j = 0; j < n; ++j)
        {
            matrix[i][j] = rand() % 100;
        }
    }

    auto start = chrono::high_resolution_clock::now(); //Починаємо заміряти перед транспонуванням
    for (int i = 0; i < n; ++i)
    {
        for (int j = 0; j < n; ++j)
        {
            transposed[j][i] = matrix[i][j];
        }
    }
    auto end = chrono::high_resolution_clock::now();
    chrono::duration<double> elapsed = end - start;
    cout << "Час транспонування матриці " << n << "x" << n << ": " << elapsed.count() << " секунд" << endl;

    return 0;
}
